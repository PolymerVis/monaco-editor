{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "outDir": "./build/",
    "inlineSourceMap": true,
    "typeRoots" : ["./typings", "node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "typings/*.d.ts",
    "node_modules/@types/**/*.d.ts",
    "node_modules/vega-lite/build/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "bower_components",
    "data"
  ]
}
