{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "Stock prices of four large companies as a small multiples of area charts.",
    "autosize": "pad",
    "padding": 5,
    "data": [
        {
            "name": "source_0",
            "url": "data/stocks.csv",
            "format": {
                "type": "csv",
                "parse": {
                    "date": "date",
                    "price": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.symbol !== 'GOOG'"
                },
                {
                    "type": "impute",
                    "field": "price",
                    "groupby": [
                        "symbol"
                    ],
                    "key": "date",
                    "method": "value",
                    "value": 0
                },
                {
                    "type": "stack",
                    "groupby": [
                        "date",
                        "symbol"
                    ],
                    "field": "price",
                    "sort": {
                        "field": [
                            "symbol"
                        ],
                        "order": [
                            "descending"
                        ]
                    },
                    "as": [
                        "price_start",
                        "price_end"
                    ],
                    "offset": "zero"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"date\"] !== null && !isNaN(datum[\"date\"]) && datum[\"price\"] !== null && !isNaN(datum[\"price\"])"
                }
            ]
        },
        {
            "name": "row_domain",
            "source": "source_0",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "symbol"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "child_width",
            "value": 300
        },
        {
            "name": "child_height",
            "value": 40
        }
    ],
    "layout": {
        "padding": {
            "row": 10,
            "column": 10
        },
        "offset": 10,
        "columns": 1,
        "bounds": "full",
        "align": "all"
    },
    "marks": [
        {
            "name": "row_title",
            "role": "row-title",
            "type": "group",
            "marks": [
                {
                    "type": "text",
                    "role": "row-title-text",
                    "style": "guide-title",
                    "encode": {
                        "update": {
                            "align": {
                                "value": "center"
                            },
                            "text": {
                                "value": "Symbol"
                            },
                            "angle": {
                                "value": 270
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "row_header",
            "type": "group",
            "role": "row-header",
            "from": {
                "data": "row_domain"
            },
            "sort": {
                "field": "datum[\"symbol\"]",
                "order": "ascending"
            },
            "title": {
                "text": {
                    "signal": "''+parent[\"symbol\"]"
                },
                "offset": 10,
                "orient": "left",
                "style": "guide-label",
                "encode": {
                    "update": {
                        "fontWeight": {
                            "value": "normal"
                        },
                        "angle": {
                            "value": 0
                        },
                        "fontSize": {
                            "value": 10
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            },
            "encode": {
                "update": {
                    "height": {
                        "signal": "child_height"
                    }
                }
            },
            "axes": [
                {
                    "title": "Price",
                    "scale": "y",
                    "orient": "left",
                    "labelOverlap": true,
                    "tickCount": {
                        "signal": "ceil(child_height/40)"
                    },
                    "zindex": 1
                }
            ]
        },
        {
            "name": "column_footer",
            "type": "group",
            "role": "column-footer",
            "encode": {
                "update": {
                    "width": {
                        "signal": "child_width"
                    }
                }
            },
            "axes": [
                {
                    "title": "Time",
                    "scale": "x",
                    "orient": "bottom",
                    "labelFlush": true,
                    "labelOverlap": true,
                    "tickCount": {
                        "signal": "ceil(child_width/40)"
                    },
                    "zindex": 1,
                    "encode": {
                        "labels": {
                            "update": {
                                "text": {
                                    "signal": "timeFormat(datum.value, '%Y')"
                                }
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "cell",
            "type": "group",
            "style": "cell",
            "from": {
                "facet": {
                    "name": "facet",
                    "data": "source_0",
                    "groupby": [
                        "symbol"
                    ]
                }
            },
            "sort": {
                "field": [
                    "datum[\"symbol\"]"
                ],
                "order": [
                    "ascending"
                ]
            },
            "encode": {
                "update": {
                    "width": {
                        "signal": "child_width"
                    },
                    "height": {
                        "signal": "child_height"
                    }
                }
            },
            "marks": [
                {
                    "name": "child_pathgroup",
                    "type": "group",
                    "from": {
                        "facet": {
                            "name": "faceted_path_child_main",
                            "data": "facet",
                            "groupby": [
                                "symbol"
                            ]
                        }
                    },
                    "encode": {
                        "update": {
                            "width": {
                                "field": {
                                    "group": "width"
                                }
                            },
                            "height": {
                                "field": {
                                    "group": "height"
                                }
                            }
                        }
                    },
                    "marks": [
                        {
                            "name": "child_marks",
                            "type": "area",
                            "style": [
                                "area"
                            ],
                            "sort": {
                                "field": "datum[\"date\"]",
                                "order": "descending"
                            },
                            "from": {
                                "data": "faceted_path_child_main"
                            },
                            "encode": {
                                "update": {
                                    "orient": {
                                        "value": "vertical"
                                    },
                                    "x": {
                                        "scale": "x",
                                        "field": "date"
                                    },
                                    "y": {
                                        "scale": "y",
                                        "field": "price_end"
                                    },
                                    "y2": {
                                        "scale": "y",
                                        "field": "price_start"
                                    },
                                    "fill": {
                                        "scale": "color",
                                        "field": "symbol"
                                    }
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "time",
            "domain": {
                "data": "source_0",
                "field": "date"
            },
            "range": [
                0,
                {
                    "signal": "child_width"
                }
            ]
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "fields": [
                    "price_start",
                    "price_end"
                ],
                "sort": true
            },
            "range": [
                {
                    "signal": "child_height"
                },
                0
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "source_0",
                "field": "symbol",
                "sort": true
            },
            "range": "category"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
