{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "height": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/movies.json",
            "format": {
                "type": "json",
                "parse": {
                    "IMDB_Rating": "number",
                    "Rotten_Tomatoes_Rating": "number"
                }
            },
            "transform": [
                {
                    "type": "extent",
                    "field": "IMDB_Rating",
                    "signal": "bin_maxbins_10_IMDB_Rating_extent"
                },
                {
                    "type": "bin",
                    "field": "IMDB_Rating",
                    "as": [
                        "bin_maxbins_10_IMDB_Rating",
                        "bin_maxbins_10_IMDB_Rating_end"
                    ],
                    "signal": "bin_maxbins_10_IMDB_Rating_bins",
                    "maxbins": 10,
                    "extent": {
                        "signal": "bin_maxbins_10_IMDB_Rating_extent"
                    }
                },
                {
                    "type": "extent",
                    "field": "Rotten_Tomatoes_Rating",
                    "signal": "bin_maxbins_10_Rotten_Tomatoes_Rating_extent"
                },
                {
                    "type": "bin",
                    "field": "Rotten_Tomatoes_Rating",
                    "as": [
                        "bin_maxbins_10_Rotten_Tomatoes_Rating",
                        "bin_maxbins_10_Rotten_Tomatoes_Rating_end"
                    ],
                    "signal": "bin_maxbins_10_Rotten_Tomatoes_Rating_bins",
                    "maxbins": 10,
                    "extent": {
                        "signal": "bin_maxbins_10_Rotten_Tomatoes_Rating_extent"
                    }
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "bin_maxbins_10_IMDB_Rating",
                        "bin_maxbins_10_IMDB_Rating_end",
                        "bin_maxbins_10_Rotten_Tomatoes_Rating",
                        "bin_maxbins_10_Rotten_Tomatoes_Rating_end"
                    ],
                    "ops": [
                        "count"
                    ],
                    "fields": [
                        "*"
                    ],
                    "as": [
                        "count_*"
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"bin_maxbins_10_IMDB_Rating\"] !== null && !isNaN(datum[\"bin_maxbins_10_IMDB_Rating\"]) && datum[\"bin_maxbins_10_Rotten_Tomatoes_Rating\"] !== null && !isNaN(datum[\"bin_maxbins_10_Rotten_Tomatoes_Rating\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "symbol",
            "style": [
                "circle"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "signal": "(scale(\"x\", datum[\"bin_maxbins_10_IMDB_Rating\"]) + scale(\"x\", datum[\"bin_maxbins_10_IMDB_Rating_end\"]))/2"
                    },
                    "y": {
                        "signal": "(scale(\"y\", datum[\"bin_maxbins_10_Rotten_Tomatoes_Rating\"]) + scale(\"y\", datum[\"bin_maxbins_10_Rotten_Tomatoes_Rating_end\"]))/2"
                    },
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "size": {
                        "scale": "size",
                        "field": "count_*"
                    },
                    "shape": {
                        "value": "circle"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "fields": [
                    "bin_maxbins_10_IMDB_Rating",
                    "bin_maxbins_10_IMDB_Rating_end"
                ],
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "zero": false
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "fields": [
                    "bin_maxbins_10_Rotten_Tomatoes_Rating",
                    "bin_maxbins_10_Rotten_Tomatoes_Rating_end"
                ],
                "sort": true
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "zero": false
        },
        {
            "name": "size",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "count_*"
            },
            "range": [
                0,
                361
            ],
            "nice": false,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/20)"
            },
            "title": "IMDB_Rating (binned)",
            "values": {
                "signal": "sequence(bin_maxbins_10_IMDB_Rating_bins.start, bin_maxbins_10_IMDB_Rating_bins.stop + bin_maxbins_10_IMDB_Rating_bins.step, bin_maxbins_10_IMDB_Rating_bins.step)"
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(height/20)"
            },
            "title": "Rotten_Tomatoes_Rating (binned)",
            "values": {
                "signal": "sequence(bin_maxbins_10_Rotten_Tomatoes_Rating_bins.start, bin_maxbins_10_Rotten_Tomatoes_Rating_bins.stop + bin_maxbins_10_Rotten_Tomatoes_Rating_bins.step, bin_maxbins_10_Rotten_Tomatoes_Rating_bins.step)"
            },
            "zindex": 1
        }
    ],
    "legends": [
        {
            "size": "size",
            "title": "Number of Records",
            "encode": {
                "symbols": {
                    "update": {
                        "shape": {
                            "value": "circle"
                        },
                        "fill": {
                            "value": "#4c78a8"
                        }
                    }
                }
            }
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
