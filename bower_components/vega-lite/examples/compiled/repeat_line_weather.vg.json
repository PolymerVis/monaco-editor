                            ],
                            "sort": {
                                "field": "datum[\"month_date\"]",
                                "order": "descending"
                            },
                            "from": {
                                "data": "faceted_path_child_wind_main"
                            },
                            "encode": {
                                "update": {
                                    "x": {
                                        "scale": "child_wind_x",
                                        "field": "month_date"
                                    },
                                    "y": {
                                        "scale": "child_wind_y",
                                        "field": "mean_wind"
                                    },
                                    "stroke": {
                                        "scale": "color",
                                        "field": "location"
                                    }
                                }
                            }
                        }
                    ]
                }
            ],
            "axes": [
                {
                    "scale": "child_wind_x",
                    "orient": "bottom",
                    "labelFlush": true,
                    "labelOverlap": true,
                    "title": "date (month)",
                    "zindex": 1,
                    "encode": {
                        "labels": {
                            "update": {
                                "text": {
                                    "signal": "timeFormat(datum.value, '%b')"
                                }
                            }
                        }
                    }
                },
                {
                    "scale": "child_wind_x",
                    "orient": "bottom",
                    "domain": false,
                    "grid": true,
                    "labels": false,
                    "maxExtent": 0,
                    "minExtent": 0,
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "child_wind_y"
                },
                {
                    "scale": "child_wind_y",
                    "orient": "left",
                    "labelOverlap": true,
                    "tickCount": {
                        "signal": "ceil(height/40)"
                    },
                    "title": "Mean of wind",
                    "zindex": 1
                },
                {
                    "scale": "child_wind_y",
                    "orient": "left",
                    "domain": false,
                    "grid": true,
                    "labels": false,
                    "maxExtent": 0,
                    "minExtent": 0,
                    "tickCount": {
                        "signal": "ceil(height/40)"
                    },
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "child_wind_x"
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "location"
                    },
                    {
                        "data": "data_1",
                        "field": "location"
                    },
                    {
                        "data": "data_2",
                        "field": "location"
                    }
                ],
                "sort": true
            },
            "range": "category"
        },
        {
            "name": "child_temp_max_x",
            "type": "time",
            "domain": {
                "data": "data_0",
                "field": "month_date"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ]
        },
        {
            "name": "child_temp_max_y",
            "type": "linear",
            "domain": {
                "data": "data_0",
                "field": "mean_temp_max"
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "child_precipitation_x",
            "type": "time",
            "domain": {
                "data": "data_1",
                "field": "month_date"
            },
            "range": [
