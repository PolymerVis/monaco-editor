{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "height": 200,
    "data": [
        {
            "name": "source_0",
            "url": "data/weather.csv",
            "format": {
                "type": "csv"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"date\"])",
                    "as": "date"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"temp_max\"])",
                    "as": "temp_max"
                },
                {
                    "type": "formula",
                    "as": "month_date",
                    "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "month_date",
                        "location"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "temp_max"
                    ],
                    "as": [
                        "mean_temp_max"
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"month_date\"] !== null && !isNaN(datum[\"month_date\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"date\"])",
                    "as": "date"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"precipitation\"])",
                    "as": "precipitation"
                },
                {
                    "type": "formula",
                    "as": "month_date",
                    "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "month_date",
                        "location"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "precipitation"
                    ],
                    "as": [
                        "mean_precipitation"
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"month_date\"] !== null && !isNaN(datum[\"month_date\"])"
                }
            ]
        },
        {
            "name": "data_2",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"date\"])",
                    "as": "date"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"wind\"])",
                    "as": "wind"
                },
                {
                    "type": "formula",
                    "as": "month_date",
                    "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "month_date",
                        "location"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "wind"
                    ],
                    "as": [
                        "mean_wind"
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"month_date\"] !== null && !isNaN(datum[\"month_date\"])"
                }
            ]
        }
    ],
    "layout": {
        "padding": {
            "row": 10,
            "column": 10
        },
        "offset": 10,
        "columns": 3,
        "bounds": "full",
        "align": "all"
    },
    "marks": [
        {
            "type": "group",
            "name": "child_temp_max_group",
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "width"
                    },
                    "height": {
                        "signal": "height"
                    }
                }
            },
            "marks": [
                {
                    "name": "child_temp_max_pathgroup",
                    "type": "group",
                    "from": {
                        "facet": {
                            "name": "faceted_path_child_temp_max_main",
                            "data": "data_0",
                            "groupby": [
                                "location"
                            ]
                        }
                    },
                    "encode": {
                        "update": {
                            "width": {
                                "field": {
                                    "group": "width"
                                }
                            },
                            "height": {
                                "field": {
                                    "group": "height"
                                }
                            }
                        }
                    },
                    "marks": [
                        {
                            "name": "child_temp_max_marks",
                            "type": "line",
                            "style": [
                                "line"
                            ],
                            "sort": {
                                "field": "datum[\"month_date\"]",
                                "order": "descending"
                            },
                            "from": {
                                "data": "faceted_path_child_temp_max_main"
                            },
                            "encode": {
                                "update": {
                                    "x": {
                                        "scale": "child_temp_max_x",
                                        "field": "month_date"
                                    },
                                    "y": {
                                        "scale": "child_temp_max_y",
                                        "field": "mean_temp_max"
                                    },
                                    "stroke": {
                                        "scale": "color",
                                        "field": "location"
                                    }
                                }
                            }
                        }
                    ]
                }
            ],
            "axes": [
                {
                    "scale": "child_temp_max_x",
                    "orient": "bottom",
                    "labelFlush": true,
                    "labelOverlap": true,
                    "title": "date (month)",
                    "zindex": 1,
                    "encode": {
                        "labels": {
                            "update": {
                                "text": {
                                    "signal": "timeFormat(datum.value, '%b')"
                                }
                            }
                        }
                    }
                },
                {
                    "scale": "child_temp_max_x",
                    "orient": "bottom",
                    "domain": false,
                    "grid": true,
                    "labels": false,
                    "maxExtent": 0,
                    "minExtent": 0,
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "child_temp_max_y"
                },
                {
                    "scale": "child_temp_max_y",
                    "orient": "left",
                    "labelOverlap": true,
                    "tickCount": {
                        "signal": "ceil(height/40)"
                    },
                    "title": "Mean of temp_max",
                    "zindex": 1
                },
                {
                    "scale": "child_temp_max_y",
                    "orient": "left",
                    "domain": false,
                    "grid": true,
                    "labels": false,
                    "maxExtent": 0,
                    "minExtent": 0,
                    "tickCount": {
                        "signal": "ceil(height/40)"
                    },
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "child_temp_max_x"
                }
            ]
        },
        {
            "type": "group",
            "name": "child_precipitation_group",
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "width"
                    },
                    "height": {
                        "signal": "height"
                    }
                }
            },
            "marks": [
                {
                    "name": "child_precipitation_pathgroup",
                    "type": "group",
                    "from": {
                        "facet": {
                            "name": "faceted_path_child_precipitation_main",
                            "data": "data_1",
                            "groupby": [
                                "location"
                            ]
                        }
                    },
                    "encode": {
                        "update": {
                            "width": {
                                "field": {
                                    "group": "width"
                                }
                            },
                            "height": {
                                "field": {
                                    "group": "height"
                                }
                            }
                        }
                    },
                    "marks": [
                        {
                            "name": "child_precipitation_marks",
                            "type": "line",
                            "style": [
                                "line"
                            ],
                            "sort": {
                                "field": "datum[\"month_date\"]",
                                "order": "descending"
                            },
                            "from": {
                                "data": "faceted_path_child_precipitation_main"
                            },
                            "encode": {
                                "update": {
                                    "x": {
                                        "scale": "child_precipitation_x",
                                        "field": "month_date"
                                    },
                                    "y": {
                                        "scale": "child_precipitation_y",
                                        "field": "mean_precipitation"
                                    },
                                    "stroke": {
                                        "scale": "color",
                                        "field": "location"
                                    }
                                }
                            }
                        }
                    ]
                }
            ],
            "axes": [
                {
                    "scale": "child_precipitation_x",
                    "orient": "bottom",
                    "labelFlush": true,
                    "labelOverlap": true,
                    "title": "date (month)",
                    "zindex": 1,
                    "encode": {
                        "labels": {
                            "update": {
                                "text": {
                                    "signal": "timeFormat(datum.value, '%b')"
                                }
                            }
                        }
                    }
                },
                {
                    "scale": "child_precipitation_x",
                    "orient": "bottom",
                    "domain": false,
                    "grid": true,
                    "labels": false,
                    "maxExtent": 0,
                    "minExtent": 0,
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "child_precipitation_y"
                },
                {
                    "scale": "child_precipitation_y",
                    "orient": "left",
                    "labelOverlap": true,
                    "tickCount": {
                        "signal": "ceil(height/40)"
                    },
                    "title": "Mean of precipitation",
                    "zindex": 1
                },
                {
                    "scale": "child_precipitation_y",
                    "orient": "left",
                    "domain": false,
                    "grid": true,
                    "labels": false,
                    "maxExtent": 0,
                    "minExtent": 0,
                    "tickCount": {
                        "signal": "ceil(height/40)"
                    },
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "child_precipitation_x"
                }
            ]
        },
        {
            "type": "group",
            "name": "child_wind_group",
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "width"
                    },
                    "height": {
                        "signal": "height"
                    }
                }
            },
            "marks": [
                {
                    "name": "child_wind_pathgroup",
                    "type": "group",
                    "from": {
                        "facet": {
                            "name": "faceted_path_child_wind_main",
                            "data": "data_2",
                            "groupby": [
                                "location"
                            ]
                        }
                    },
                    "encode": {
                        "update": {
                            "width": {
                                "field": {
                                    "group": "width"
                                }
                            },
