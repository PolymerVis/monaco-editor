{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "Two horizonally concatenated charts that show a histogram of precipitation in Seattle and the relationship between min and max temperature.",
    "autosize": "pad",
    "padding": 5,
    "height": 200,
    "data": [
        {
            "name": "source_0",
            "url": "data/weather.csv",
            "format": {
                "type": "csv"
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.location === 'Seattle'"
                }
            ]
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"date\"])",
                    "as": "date"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"precipitation\"])",
                    "as": "precipitation"
                },
                {
                    "type": "formula",
                    "as": "month_date",
                    "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "month_date"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "precipitation"
                    ],
                    "as": [
                        "mean_precipitation"
                    ]
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"temp_min\"])",
                    "as": "temp_min"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"temp_max\"])",
                    "as": "temp_max"
                },
                {
                    "type": "extent",
                    "field": "temp_min",
                    "signal": "concat_1_bin_maxbins_10_temp_min_extent"
                },
                {
                    "type": "bin",
                    "field": "temp_min",
                    "as": [
                        "bin_maxbins_10_temp_min",
                        "bin_maxbins_10_temp_min_end"
                    ],
                    "signal": "concat_1_bin_maxbins_10_temp_min_bins",
                    "maxbins": 10,
                    "extent": {
                        "signal": "concat_1_bin_maxbins_10_temp_min_extent"
                    }
                },
                {
                    "type": "extent",
                    "field": "temp_max",
                    "signal": "concat_1_bin_maxbins_10_temp_max_extent"
                },
                {
                    "type": "bin",
                    "field": "temp_max",
                    "as": [
                        "bin_maxbins_10_temp_max",
                        "bin_maxbins_10_temp_max_end"
                    ],
                    "signal": "concat_1_bin_maxbins_10_temp_max_bins",
                    "maxbins": 10,
                    "extent": {
                        "signal": "concat_1_bin_maxbins_10_temp_max_extent"
                    }
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "bin_maxbins_10_temp_min",
                        "bin_maxbins_10_temp_min_end",
                        "bin_maxbins_10_temp_max",
                        "bin_maxbins_10_temp_max_end"
                    ],
                    "ops": [
                        "count"
                    ],
                    "fields": [
                        "*"
                    ],
                    "as": [
                        "count_*"
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"bin_maxbins_10_temp_min\"] !== null && !isNaN(datum[\"bin_maxbins_10_temp_min\"]) && datum[\"bin_maxbins_10_temp_max\"] !== null && !isNaN(datum[\"bin_maxbins_10_temp_max\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "concat_0_x_step",
            "value": 21
        },
        {
            "name": "concat_0_width",
            "update": "bandspace(domain('concat_0_x').length, 0.1, 0.05) * concat_0_x_step"
        },
        {
            "name": "concat_1_width",
            "value": 200
        }
    ],
    "layout": {
        "padding": {
            "row": 10,
            "column": 10
        },
        "offset": 10,
        "bounds": "full",
        "align": "each"
    },
    "marks": [
        {
            "type": "group",
            "name": "concat_0_group",
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "concat_0_width"
                    },
                    "height": {
                        "signal": "height"
                    }
                }
            },
            "marks": [
                {
                    "name": "concat_0_marks",
                    "type": "rect",
                    "style": [
                        "bar"
                    ],
                    "from": {
                        "data": "data_0"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "concat_0_x",
                                "field": "month_date"
                            },
                            "width": {
                                "scale": "concat_0_x",
                                "band": true
                            },
                            "y": {
                                "scale": "concat_0_y",
                                "field": "mean_precipitation"
                            },
                            "y2": {
                                "scale": "concat_0_y",
                                "value": 0
                            },
                            "fill": {
                                "value": "#4c78a8"
                            }
                        }
                    }
                }
            ],
            "axes": [
                {
                    "scale": "concat_0_x",
                    "orient": "bottom",
                    "labelOverlap": true,
                    "title": "date (month)",
                    "zindex": 1,
                    "encode": {
                        "labels": {
                            "update": {
                                "text": {
                                    "signal": "timeFormat(datum.value, '%b')"
                                },
                                "angle": {
                                    "value": 270
                                },
                                "align": {
                                    "value": "right"
                                },
                                "baseline": {
                                    "value": "middle"
                                }
                            }
                        }
                    }
                },
                {
                    "scale": "concat_0_y",
                    "orient": "left",
                    "labelOverlap": true,
                    "tickCount": {
                        "signal": "ceil(height/40)"
                    },
                    "title": "Mean of precipitation",
                    "zindex": 1
                },
                {
                    "scale": "concat_0_y",
                    "orient": "left",
                    "domain": false,
                    "grid": true,
                    "labels": false,
                    "maxExtent": 0,
                    "minExtent": 0,
                    "tickCount": {
                        "signal": "ceil(height/40)"
                    },
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "concat_0_x"
                }
            ]
        },
        {
            "type": "group",
            "name": "concat_1_group",
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "concat_1_width"
                    },
                    "height": {
                        "signal": "height"
                    }
                }
            },
            "marks": [
                {
                    "name": "concat_1_marks",
                    "type": "symbol",
                    "style": [
                        "point"
                    ],
                    "from": {
                        "data": "data_1"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "signal": "(scale(\"concat_1_x\", datum[\"bin_maxbins_10_temp_min\"]) + scale(\"concat_1_x\", datum[\"bin_maxbins_10_temp_min_end\"]))/2"
                            },
                            "y": {
                                "signal": "(scale(\"concat_1_y\", datum[\"bin_maxbins_10_temp_max\"]) + scale(\"concat_1_y\", datum[\"bin_maxbins_10_temp_max_end\"]))/2"
                            },
                            "stroke": {
                                "value": "#4c78a8"
                            },
                            "fill": {
                                "value": "transparent"
                            },
                            "size": {
                                "scale": "size",
                                "field": "count_*"
                            }
                        }
                    }
                }
            ],
            "axes": [
                {
                    "scale": "concat_1_x",
                    "orient": "bottom",
                    "labelFlush": true,
                    "labelOverlap": true,
                    "tickCount": {
                        "signal": "ceil(concat_1_width/20)"
                    },
                    "title": "temp_min (binned)",
                    "values": {
                        "signal": "sequence(concat_1_bin_maxbins_10_temp_min_bins.start, concat_1_bin_maxbins_10_temp_min_bins.stop + concat_1_bin_maxbins_10_temp_min_bins.step, concat_1_bin_maxbins_10_temp_min_bins.step)"
                    },
                    "zindex": 1
                },
                {
                    "scale": "concat_1_y",
                    "orient": "left",
                    "labelOverlap": true,
                    "tickCount": {
                        "signal": "ceil(height/20)"
                    },
                    "title": "temp_max (binned)",
                    "values": {
                        "signal": "sequence(concat_1_bin_maxbins_10_temp_max_bins.start, concat_1_bin_maxbins_10_temp_max_bins.stop + concat_1_bin_maxbins_10_temp_max_bins.step, concat_1_bin_maxbins_10_temp_max_bins.step)"
                    },
                    "zindex": 1
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "size",
            "type": "linear",
            "domain": {
                "data": "data_1",
                "field": "count_*"
            },
            "range": [
                0,
                361
            ],
            "nice": false,
            "zero": true
        },
        {
            "name": "concat_0_x",
            "type": "band",
            "domain": {
                "data": "data_0",
                "field": "month_date",
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "concat_0_x_step"
                }
            },
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        },
        {
            "name": "concat_0_y",
            "type": "linear",
            "domain": {
                "data": "data_0",
                "field": "mean_precipitation"
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "concat_1_x",
            "type": "linear",
            "domain": {
                "data": "data_1",
                "fields": [
                    "bin_maxbins_10_temp_min",
                    "bin_maxbins_10_temp_min_end"
                ],
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "concat_1_width"
                }
            ],
            "zero": false
        },
        {
            "name": "concat_1_y",
            "type": "linear",
            "domain": {
                "data": "data_1",
                "fields": [
                    "bin_maxbins_10_temp_max",
                    "bin_maxbins_10_temp_max_end"
                ],
                "sort": true
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "zero": false
        }
    ],
    "legends": [
        {
            "size": "size",
            "title": "Number of Records",
            "encode": {
                "symbols": {
                    "update": {
                        "stroke": {
                            "value": "#4c78a8"
                        }
                    }
                }
            }
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
